
@{
    ViewBag.Title = "Nhà Bếp";
    ViewBag.SubTitle = "Nhà bếp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="container-kitchen">

    <table id="table-kitchen" class="table">
        <thead>
            <tr>
                <th>Số bàn</th>
                <th>Tên món</th>
                <th>Số lượng</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.ListOrder)
            {
                <tr>
                    <td>@item.tableID</td>
                    <td>@item.Product.productName</td>
                    <td>@item.quantity</td>
                    <td><span data-id="@item.id" data-product="@item.Product.id" data-quantity="@item.quantity" class="glyphicon glyphicon-ok complete-food"></span></td>
                </tr>
            }
        </tbody>
    </table>

</div>

