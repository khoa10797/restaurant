@model PagedList.IPagedList<Models.EF.Table>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Danh sách bàn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        @foreach (var table in Model)
        {
            <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                <div id="container-table" class="container-flex">

                    @if (table.status == true)
                    {
                        <a href="/Order/Index?tableID=@table.id">
                            <div id="content-table" class="table-active">
                                <div class="content-top">
                                    <span>@table.id</span>
                                </div>

                                <div class="content-bottom">
                                    <span>abc</span>
                                </div>
                            </div>
                        </a>
                    }
                    else
                    {
                        <div id="content-table" class="table-empty">
                            <div class="content-top">
                                <span>@table.id</span>
                            </div>

                            <div class="content-bottom">
                                <button class="fas fa-plus-circle btn-add-invoice" data-toggle="modal" data-target="#t@(table.id)"></button>

                                <!-- The Modal -->
                                <div class="modal" id="t@(table.id)">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">

                                            <!-- Modal Header -->
                                            <div class="modal-header">
                                                <h4 class="modal-title">Thêm hóa đơn</h4>
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            </div>

                                            <!-- Modal body -->
                                            <div class="modal-body">
                                                @using (Html.BeginForm("AddInvoice", "Table", FormMethod.Post))
                                                {
                                                    <input type="hidden" id="tableId" name="tableId" value=@table.id>
                                                    <div class="form-group">
                                                        <label for="customerName">Tên khách:</label>
                                                        <input type="text" class="form-control" id="customerName" placeholder="Nhập tên khách" name="customerName" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="customerPhone">Số điện thoại:</label>
                                                        <input type="text" class="form-control" id="customerPhone" placeholder="Nhập số điện thoại" name="customerPhone" required>
                                                    </div>
                                                    <button type="submit" class="btn btn-primary">Ok</button>
                                                }
                                            </div>

                                            <!-- Modal footer -->
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        }
    </div>
</div>

<div id="container-paged-list" class="container-flex">
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    <br />
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>

