
@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <nav class="tab-controls">
        <div class="nav nav-tabs" role="tablist">
            <a class="nav-item nav-link active" href="#contain-infomation" id="contain-infomation-tab" data-toggle="tab" role="tab"
               aria-controls="contain-infomation" aria-selected="true">Thông tin khách</a>
            <a class="nav-item nav-link" href="#table-pay-details" id="table-pay-details-tab" data-toggle="tab" role="tab" aria-controls="table-pay-details"
               aria-selected="false">Chi tiết hóa đơn</a>
        </div>
    </nav>

    <div class="tab-content">

        <!-- Tab information customer -->
        <div id="contain-infomation" class="tab-pane fade show active" role="tabpanel" aria-labelledby="invoice-infomation-tab">
            <div id="invoice-infomation">
                <div class="invoice-group">
                    <label>Mã hóa đơn:</label>
                    <input type="text" readonly value="@ViewBag.Invoice.id" />
                </div>
                <div class="invoice-group">
                    <label>Số bàn:</label>
                    <input type="text" readonly value="@ViewBag.Invoice.tableID" />
                </div>
                <div class="invoice-group">
                    <label>Tên khách:</label>
                    <input type="text" readonly value="@ViewBag.Invoice.customerName" />
                </div>
                <div class="invoice-group">
                    <label>Số điện thoại:</label>
                    <input type="text" readonly value="@ViewBag.Invoice.customerPhone" />
                </div>
                <div class="invoice-group">
                    <label>Tổng tiền:</label>
                    <div>
                        <span id="invoice-price"></span><span>VNĐ</span>
                    </div>
                </div>
                <a href="@Url.Action("PayInvoice", new { invoiceID = ViewBag.Invoice.id, tableID = ViewBag.Invoice.tableID })" class="btn btn-primary">Xong</a>
            </div>
        </div>

        <!-- Tab invoice details -->
        <div id="table-pay-details" class="tab-pane fade show" role="tabpanel" aria-labelledby="table-pay-details-tab">
            <table class="table table-responsive-sm">
                <thead>
                    <tr>
                        <th>Tên món</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.ListInvoiceDetails)
                    {
                        <tr>
                            <td>@item.Product.productName</td>
                            <td>@item.quantity</td>
                            <td>@item.Product.price</td>
                            <td data-values="@(item.quantity * item.Product.price)"><span class="price-product"></span></td>
                        </tr>
                    }
                </tbody>
            </table>
            <h5 id="totalPricePay" style="color: red;"></h5>
        </div>

    </div>

</div>

