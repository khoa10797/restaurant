
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng nhập</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/login.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div id="container-login" class="container">
        <div id="content-login">
            <h4 style="margin-bottom: 20px;">Đăng nhập</h4>
            @using (Html.BeginForm("CheckLogin", "Login", FormMethod.Post))
            {
                <div class="form-group row">
                    <label class="col-sm-12 col-md-5" for="userName">Tên đăng nhập:</label>
                    <input type="text" class="form-control col-sm-12 col-md-7" id="userName" placeholder="Tên tài khoản" name="userName">
                </div>
                <div class="form-group row">
                    <label class="col-sm-12 col-md-5" for="password">Mật khẩu:</label>
                    <input type="password" class="form-control col-sm-12 col-md-7" id="password" placeholder="Mật khẩu" name="password">
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" name="remember"> Lưu tài khoản
                    </label>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-sm">Đăng nhập</button>
                </div>
            }
        </div>
    </div>
</body>
</html>
