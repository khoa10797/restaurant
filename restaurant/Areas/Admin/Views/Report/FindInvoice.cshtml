@model List<Models.EF.Invoice>
@{
    ViewBag.Title = "Hóa đơn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-inline">
    <label style="margin-right: 5px">Chọn ngày:</label>
    <input id="datetime-picker" type="date" class="form-control" name="date" />
</div>

<br />

<table class="table">
    <thead>
        <tr>
            <th>Mã hóa đơn</th>
            <th>Tên khách</th>
            <th>Số điện thoại</th>
            <th>Trạng thái</th>
            <th>Ngày tạo</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="row-table-invoice">
                <td>@item.id</td>
                <td>@item.customerName</td>
                <td>@item.customerPhone</td>
                <td class="status-invoice" data-status="@item.status"></td>
                <td class="format-date" data-date="@item.dataCreate"></td>
                <td><a href="@Url.Action("GetInovoiceDetails", "Report", new { invoiceID =  item.id})">Chi tiết</a></td>
            </tr>
        }
    </tbody>
</table>